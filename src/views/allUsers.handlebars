<div class="container">
	<h1>Usuarios</h1>
	<table class='table'>
		<thead>
			<tr>
				<th>Nombre</th>
				<th>Email</th>
				<th>Rol</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			{{#each users}}
				<tr>
					<td>{{name}}</td>
					<td>{{email}}</td>
					<td>{{role}}</td>
					<td>
						<a href='/users/{{_id}}'>Ver</a>
						<a href='/users/{{_id}}/edit'>Editar</a>
						<a href='/users/{{_id}}/delete'>Eliminar</a>
					</td>
				</tr>
			{{/each}}
		</tbody>
	</table>
</div>