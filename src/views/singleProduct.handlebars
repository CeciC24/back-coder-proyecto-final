<div class='container'>
	<h2>{{product.title}}</h2>
	<p>{{product.description}}</p>
	<p>Precio: {{product.price}}</p>
	{{#if auth}}
		{{#if notAdmin}}
			<button type='button' class='addToCartBtn' productID={{product._id}} cartID={{cartID}}>Agregar al carrito</button>
		{{/if}}
	{{/if}}
	<a href='/products'>Volver a todos los productos</a>
</div>

<script src='../js/addToCart.js'></script>